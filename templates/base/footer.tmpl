	</div>
	<footer>
		<div class="ui container">
			<div class="ui left">
				&copy; 2013-2016 Flying Penguin {{if (or .ShowFooterVersion .PageIsAdmin)}}{{.i18n.Tr "version"}}: {{AppVer}}{{end}} {{.i18n.Tr "page"}}: <strong>{{LoadTimes .PageStartTime}}</strong> {{.i18n.Tr "template"}}: <strong>{{call .TmplLoadTimes}}</strong>
			</div>
			<div class="ui right links">
				{{if .ShowFooterBranding}}
				{{end}}
				<div class="ui language bottom pointing slide up dropdown link item">
					<i class="world icon"></i>
					<div class="text">{{.LangName}}</div>
					<div class="menu">
						{{range .AllLangs}}
							<a class="item {{if eq $.Lang .Lang}}active selected{{end}}" href="{{if eq $.Lang .Lang}}#{{else}}{{$.Link}}?lang={{.Lang}}{{end}}">{{.Name}}</a>
						{{end}}
					</div>
				</div>
				<a target="_blank" href="http://flyingpenguin1">{{.i18n.Tr "website"}}</a>
				{{if (or .ShowFooterVersion .PageIsAdmin)}}<span class="version">{{GoVer}}</span>{{end}}
			</div>
		</div>
	</footer>
</body>

